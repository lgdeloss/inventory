<% if @item.errors.any? %>
    <h2>The following errors prevented the item from being saved</h2>
    <ul>
    <% @item.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>
<%= form_with(model: @item, local:true)  do |f|%>
    <p>
        <%= f.label :name%>
        <%= f.text_field :name%>
    </p>
    <p>
        <%= f.label :amount%>
        <%= f.text_field :amount%>
    </p>
    <p>
        <%= f.label :price%>
        <%= f.text_field :price%>
    </p>
    <p>
        <%= f.submit :save%>
    </p>
    
<% end %>