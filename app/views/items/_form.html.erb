<div class="container">
  <% if @item.errors.any? %>
    <h2>The following errors prevented the item from being saved</h2>
    <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row justify-content-center">
    <div class="col-5">
      <%= form_with(model: @item, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_field :name, class: "form-control shadow rounded"%>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :amount, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :amount, rows: 2, class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :price, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :price, rows: 2, class: "form-control shadow rounded"%>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "col-10 btn-outline-dark btn-lg" %>
        </div>
      <% end %>
      <div class="row justify-content-center">
       <%= link_to '[ Cancel and return to items listing ]', items_path, class: "text-info" %>
      </div>
    </div>
  </div>

</div> 