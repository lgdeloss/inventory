<div class="container">
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Amount</th>
            <th>Price</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @items.each do |item| %>
        <tr>
            <td><%= item.name%></td>
            <td><%= item.amount%></td>
            <td><%= item.price%></td>
            <td><%= link_to 'Show', item_path(item), class: "btn btn-outline-success"%></td>
            <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-outline-info" %></td>
            <td><%= link_to 'Delete', item_path(item), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<p>
    <%= link_to 'Create new item', new_item_path %>
</p>
</div>